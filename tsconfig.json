{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "paths": {
      "Root/*": [
        "src/*"
      ],
      "Libraries/*": [
        "src/lib/*"
      ],
      "Settings": [
        "src/settings"
      ],
      "Utils": [
        "src/utils"
      ],
      "Types": [
        "src/types"
      ],
      "Constants": [
        "src/constants"
      ],
      "IO": [
        "src/io"
      ]
    }
  },
  "include": [
    "src"
  ]
}